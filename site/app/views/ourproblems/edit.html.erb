<html>
<head>
<!-- Only if problem setter -->
<div style="top: 0%; left: 40%; position: absolute;"> 

<h1>EDIT PROBLEM</h1> 
</div>
</head>

<body>
<div style="top: 15%; left: 2%; position: absolute;"> 


<!-- Input/Output Files upload -->
  <%= form_tag('/actions/uploadedtoaws',:method=>'post',multipart: true) do %>
    <%= file_field_tag :file  %>
    <%= submit_tag 'Upload Input/Output Zip File' %>
  <% end %>
 
 <!-- Instructions for Problem Setters --> 
 <%= link_to "Instructions for Input/Output Format", "/actions/instructionmanual", :style=>"color:#FFFFFF" %>
 
<%= form_for :ourproblem, url: ourcontest_ourproblem_path(@ourproblem.contestid,@ourproblem.id), method: :patch, html: {class: "nifty_form"} do |f| %>
  <% if @ourproblem.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@ourproblem.errors.count, "error") %> prohibited
        this problem from being saved:
      </h2>
      <ul>
        <% @ourproblem.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
 
 <p>
   <b> <%= f.label :Problem_name %> </b>
    <%= f.text_field :name %>
  </p>
 
 <p>
   <b> <%= f.label :Problem_code %> </b>
    <%= f.text_field :code %>
  </p>
  
  <p>
    <b> Problem Statement </b>
    <br>
    <%= f.text_area :statement, :rows => "25", :cols => "50" %>
  </p>
  
  <p>
   <b> <%= f.label :Time_limit %> </b>
    <%= f.text_field :timelimit %>
  </p>
  
  <p>
    <b> <%= f.label :Memory_limit %> </b>
    <%= f.text_field :memory %>
  </p>
  
  <p>
    <%= f.submit "Update Problem" %>
  </p>
 
<% end %>

</div>
</body>
</html>
