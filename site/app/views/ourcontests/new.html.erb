<html>
<head>

<div style="top: 0%; left: 40%; position: absolute;"> 

<h1>ORGANISE A CONTEST</h1> 
</div>
</head>

<body>
<div style="top: 7%; left: 2%; position: absolute;"> 

<!-- Display any flash notice-->
<% flash.each do |name, msg| %>
    <%= content_tag :div, msg, class: "alert alert-info" %>
  <% end %>

<%= form_for :ourcontest, url: {controller: "ourcontests",action: "index"}, html: {class: "nifty_form"} do |f| %>
  <% if @ourcontest.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@ourcontest.errors.count, "error") %> prohibited
        this contest from being saved:
      </h2>
      <ul>
        <% @ourcontest.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <p>
    <%= f.label :Name %>
    <%= f.text_field :name %>
  </p>
  
  <p>
    <%= f.label :Code %>
    <%= f.text_field :code %>
  </p>
 
   Enter Start and End time of the contest:
  
  <p>
    <%= f.label :Start %>
    <%= f.datetime_select :start %>  
  </p>
  
  <p>
    <%= f.label :End %>
    <%= f.datetime_select :end %>
  </p>
  
  <p>
    	   <div style = "left: 2%; position: absolute"> <input type="submit" name="commit" value="Save Contest Details" /></div>
  </p>
<% end %>

</div>
</body>
</html>
