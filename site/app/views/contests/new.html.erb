<head>
<div style="top: 0%; left: 40%; position: absolute;"> 
<h1>ORGANISE A CONTEST</h1> 
</div>
</head>

<body>
<div style="top: 7%; left: 2%; position: absolute;"> 

<%= form_for :contest, url: {controller: "contests",action: "contestadded"}, html: {class: "nifty_form"} do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :Date_and_Time %>
    <%= f.datetime_field :dateandtime %>
  </p>
  
  <p>
    <%= f.label :Duration %>
    <%= f.text_field :duration %>
  </p>
  
   <p>
    	<div style = "left: 2%; position: absolute"> <%= f.submit "Save Contest Details" %></div>
  </p>
<% end %>
</div>
</body>

